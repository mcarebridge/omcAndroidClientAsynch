<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="wrap_content" android:isScrollContainer="true">
    <TableLayout android:id="@+id/tableLayout1" android:visibility="visible" android:layout_margin="5dip" android:fitsSystemWindows="true" android:layout_width="319dp" android:layout_height="fill_parent">
        <EditText android:id="@+id/errMsgText" android:layout_width="wrap_content" android:inputType="textMultiLine" android:cursorVisible="false" android:textColor="#333" android:paddingTop="3dp" android:background="#000000" android:layout_height="50dp"></EditText>
        <TableRow android:id="@+id/tableRow1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_margin="5dip">
            <EditText android:editable="false" android:id="@+id/labelEmpId" android:text="@string/empId" android:layout_width="fill_parent" android:layout_height="fill_parent" android:inputType="none" android:textStyle="bold" android:textColor="#fff" android:minWidth="100dip" android:background="#000000"></EditText>
            <EditText android:fitsSystemWindows="true" android:editable="true" android:height="50dip" android:inputType="textPersonName" android:layout_height="wrap_content" android:id="@+id/textEmpId" android:layout_width="fill_parent" android:maxWidth="400dip" android:minWidth="150dip">
                <requestFocus></requestFocus>
            </EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_margin="5dip" android:background="#000000">
            <EditText android:layout_height="wrap_content" android:id="@+id/labelEmpKey" android:layout_width="wrap_content" android:editable="false" android:text="@string/empkey" android:inputType="none" android:textStyle="bold" android:typeface="sans" android:textColor="#fff" android:minWidth="100dip" android:background="#000000"></EditText>
            <EditText android:layout_height="wrap_content" android:inputType="textPassword" android:layout_width="wrap_content" android:id="@+id/pwdEmpKey" android:maxWidth="400dip"></EditText>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="5dip">
            <Button android:layout_width="wrap_content" android:onClick="verifyEmployee" android:id="@+id/buttonVerify" android:layout_height="wrap_content" android:clickable="true" android:text="@string/verify" android:minWidth="100dip"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/logout" android:text="@string/logout" android:height="40dip" android:onClick="logout"></Button>
        </TableRow>
        <!--  <EditText android:id="@+id/textEmpDetails" android:background="#444444" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/messageBoxStyle"></EditText> -->
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/attendanceAction" android:includeFontPadding="true" android:text="IN" android:clickable="true" android:onClick="markAttendance"></Button>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow5" android:layout_width="fill_parent" android:layout_margin="5dip">
        </TableRow>
    </TableLayout>

</FrameLayout>

