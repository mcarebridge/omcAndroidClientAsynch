<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent" android:isScrollContainer="true">
	<TableLayout android:id="@+id/tableLayout1"
		android:visibility="visible" android:layout_margin="5dip"
		android:fitsSystemWindows="true" android:padding="5dip" android:gravity="top|center_horizontal|center" android:layout_height="wrap_content" android:layout_width="fill_parent">
		<EditText android:id="@+id/errMsgText" android:layout_width="wrap_content"
			android:inputType="textMultiLine" android:cursorVisible="false"
			android:textColor="#333" android:paddingTop="3dp" android:background="#000000"
			android:layout_height="50dip" android:textSize="15sp"></EditText>
		<Button android:clickable="true" android:layout_width="wrap_content"
			android:includeFontPadding="true" android:id="@+id/kickScan"
			android:text="@string/scanemp" android:onClick="kickScan"
			android:layout_height="wrap_content" android:hint="@string/hintScanForAtnd"
			android:textSize="25sp" android:focusable="true" android:textColor="#3ADF00" android:height="50dip"></Button>
		<Button android:id="@+id/omitAttendance" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/omitattendance"
			android:textSize="25sp" android:clickable="false" android:onClick="omitAttendance" android:textColor="#FF0000" android:height="50dip"></Button>
		<Button android:layout_width="wrap_content"
			android:includeFontPadding="true" android:onClick="markAttendance"
			android:layout_height="wrap_content" android:id="@+id/attendanceAction"
			android:textSize="25sp" android:text="IN/OUT" android:clickable="false"
			android:textColor="#787878" android:height="50dip"></Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/logout"
			android:onClick="logout" android:textSize="25sp" android:text="@string/lastAttendanceRecord" android:clickable="true" android:textColor="#3ADF00" android:focusable="true" android:height="50dip"></Button>
	</TableLayout>

</FrameLayout>

